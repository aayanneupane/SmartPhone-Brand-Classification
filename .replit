modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Smartphone Classifier"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Train Model"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dataset Creator"

[[workflows.workflow]]
name = "Smartphone Classifier"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --predict data/samsung/073f4a59ad.jpg"

[[workflows.workflow]]
name = "Train Model"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --train data"

[[workflows.workflow]]
name = "Dataset Creator"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python dataset_creator.py"

[deployment]
run = ["sh", "-c", "python main.py --predict data/samsung/073f4a59ad.jpg"]
